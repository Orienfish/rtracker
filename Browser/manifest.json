{
  "manifest_version": 2,
  "name": "rTracker",
  "version": "1.0",
  "description": "Reformats the page and introduces a better format for eye tracker readability.",
  "applications": {
    "gecko": {
      "id": "EyeShredding@shreddo.edu"
    }
  },
  "icons": {
    "48": "icons/border-48.png"
  },
  
  "permissions": ["menus", "contextMenus", "activeTab"],
  "content_scripts": [
    {
      "css": ["syllablePopup.css"],
      "matches": ["<all_urls>"],
      "js": [
              "syllablePopup.js",
              "reformat.js", 
              "highlight.js",
              "blur.js",
              "track.js", 
              "events.js",
              "socket.js"
            ]
    }
  ],
  
  "background": {
        "scripts": ["data.js", "syllables.js", "background.js"]
  }
}