{

  "manifest_version": 2,
  "name": "Borderify",
  "version": "1.0",
  "applications": {
    "gecko": {
      "id": "EyeShredding@shreddo.edu"
    }
  },

  "description": "Reformats the page and introduces a better format for eye tracker readability.",

  "icons": {
    "48": "icons/border-48.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.mozilla.org/*"],
      "js": [
              "reformat.js", 
              "highlight.js",
              "blur.js",
              "events.js"
            ]
    }
  ]

}
